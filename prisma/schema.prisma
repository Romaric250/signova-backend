// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  image         String?   // Better Auth uses 'image' instead of 'avatar'
  emailVerified Boolean   @default(false)
  
  // Better Auth relations
  accounts      Account[]
  sessions      Session[]
  
  // App-specific relations
  progress      Progress[]
  favorites     Favorite[]
  translations  Translation[]
  
  // App-specific fields
  preferences   Json?     // {language: 'ASL', avatarSpeed: 1.0, theme: 'light'}
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Sign {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  word        String
  language    String   // 'ASL', 'BSL', 'ISL', 'LSF', 'GSL'
  category    String   // 'Greetings', 'Numbers', 'Colors'
  difficulty  String   // 'beginner', 'intermediate', 'advanced'
  videoUrl    String   // UploadThing URL
  thumbnail   String   // UploadThing URL
  description String
  
  relatedSigns String[] @db.ObjectId
  
  favorites   Favorite[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([language, category])
}

model Progress {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  
  signsLearned Int     @default(0)
  practiceTime Int     @default(0) // minutes
  streak      Int      @default(0)
  lastActive  DateTime @default(now())
  
  achievements Json[]   // [{id: 'first_sign', unlockedAt: '2024-01-01'}]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId])
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  signId    String   @db.ObjectId
  sign      Sign     @relation(fields: [signId], references: [id])
  
  createdAt DateTime @default(now())
  
  @@unique([userId, signId])
}

model Translation {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  
  inputText   String
  inputType   String   // 'speech', 'text'
  language    String   // Target sign language
  confidence  Float?
  
  createdAt   DateTime @default(now())
  
  @@index([userId, createdAt])
}

// Better Auth required models
model Account {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @db.ObjectId
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  providerId            String   // 'credential', 'google', 'github', etc.
  accountId             String   // Provider's user ID
  password              String?  // Hashed password for credential provider
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@unique([providerId, accountId])
  @@index([userId])
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  token     String   @unique
  expiresAt DateTime
  
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Verification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   // Email or phone number
  value      String   // Verification code/token
  expiresAt  DateTime
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([identifier, value])
}

